{
  "name": "hearbeat_rate",
  "description": "Heartbeat Rate",
  "continue": false,
  "active": true,
  "constraint": {
    "WHERE": {
      "type": "AND",
      "operators": [
        {
          "type": "regex",
          "regex": ".*1.*",
          "target": "${event.payload.oids.\"NET-SNMP-EXAMPLES-MIB::netSnmpExampleHeartbeatRate\".content}"
        }
      ]
    },
    "WITH": {}
  },
  "actions": [
    {
      "id": "monitoring",
      "payload": {
        "service_creation_payload": {
          "object_name": "Heartbeat",
          "object_type": "Object",
          "vars": {
            "created_by": "tornado"
          },
          "host": "${event.payload.src_ip}",
          "imports": "generic-passive-service"
        },
        "host_creation_payload": {
          "imports": "generic-passive-host",
          "vars": {
            "created_by": "tornado"
          },
          "address": "127.0.0.1",
          "object_name": "${event.payload.src_ip}",
          "object_type": "Object"
        },
        "process_check_result_payload": {
          "exit_status": "0",
          "service": "${event.payload.src_ip}!Heartbeat",
          "type": "Service",
          "performance_data": [],
          "plugin_output": "Output message"
        },
        "action_name": "create_and_or_process_service_passive_check_result"
      }
    }
  ]
}