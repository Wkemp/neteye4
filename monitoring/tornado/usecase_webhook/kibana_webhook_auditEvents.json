{
  "trigger": {
    "schedule": {
      "interval": "5m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query":{
            "bool": {
              "must": [
                {
                  "term": {
                    "winlog.event_id": {
                      "value": 4625
                    }
                  }
                },
                {
                  "term": {
                    "winlog.channel.keyword": {
                      "value": "Security"
                    }
                  }
                },
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-5m",
                      "lte": "now"
                    }
                  }
                }
              ]
            }
          }
        },
        "indices": [
          "winlogbeat*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 3
      }
    }
  },
  "actions": {
    "my-fancy-action": {
        "webhook": {
            "scheme": "http",
            "host": "localhost",
            "port": 8080,
            "method": "post",
            "path": "/event/siem",
            "params": {
                "token": "123"
            },
            "headers": {
                "Content-Type": "application/json"
            },
            "body": "{{#toJson}}ctx{{/toJson}}"
            }
        }
    }
  }

